<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.sxh427.mall.dao.BlackListDao">

    <resultMap type="top.sxh427.mall.entities.BlackList" id="BlackListMap">
        <result property="id" column="hid" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询班级所有学生的总体成绩信息-->
    <select id="queryById" resultMap="BlackListMap">
        SELECT hid,phone
        FROM blacklist
        WHERE hid = #{id}
    </select>
</mapper>